{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "commonjs",
    "jsx": "preserve",
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "strictPropertyInitialization": false,
    "strictBindCallApply": false,
    "strictFunctionTypes": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": false,
    "noUncheckedIndexedAccess": false,
    "noPropertyAccessFromIndexSignature": false,
    "exactOptionalPropertyTypes": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "incremental": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@/components/*": [
        "./components/*"
      ],
      "@/lib/*": [
        "./lib/*"
      ],
      "@/hooks/*": [
        "./hooks/*"
      ],
      "@/utils/*": [
        "./utils/*"
      ],
      "@/styles/*": [
        "./styles/*"
      ],
      "@/types/*": [
        "./types/*"
      ],
      "@/contexts/*": [
        "./contexts/*"
      ],
      "@/config/*": [
        "./config/*"
      ],
      "@/data/*": [
        "./data/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "types/*.d.ts",
    "types/**/*.d.ts",
    "pages/**/*.ts",
    "pages/**/*.tsx",
    "components/**/*.ts",
    "components/**/*.tsx",
    "hooks/**/*.ts",
    "hooks/**/*.tsx",
    "utils/**/*.ts",
    "utils/**/*.tsx",
    "services/**/*.ts",
    "services/**/*.tsx",
    "middleware.ts",
    "middleware/**/*.ts",
    "middleware/**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "components/test",
    "components/test/**",
    "**/components/test",
    "**/components/test/**",
    "**/__tests__/**",
    "utils/__tests__/**",
    "pages/api/**",
    "components/features/wallet/contexts/SimpleLocalizationContext.tsx",
    "lib/swagger/**",
    "lib/auth-system.ts",
    "lib/auth/**",
    "lib/core/index.ts",
    "lib/database/**",
    "lib/dynamic-components.tsx",
    "lib/dynamic-imports.ts",
    "lib/image-optimization.ts",
    "lib/image-system/**",
    "lib/materialized-views-helper.ts",
    "lib/middleware/pageVisibilityMiddleware.ts",
    "lib/middleware/performanceMiddleware.ts",
    "lib/monitoring/**",
    "lib/notifications/notificationManager.ts",
    "lib/performance-integration.ts",
    "lib/performance/auto-optimizer.ts",
    "lib/prisma/optimized-queries.ts",
    "lib/prisma/optimized-selectors.ts",
    "lib/queue/processors.ts",
    "lib/queue/workers.ts",
    "lib/notifications/unified-notification-system.ts",
    "lib/services/inventoryService.ts",
    "lib/services/search/**",
    "lib/services/universal/auctionService.ts",
    "lib/socket/enterprise-socket-client.ts",
    "lib/wallet/**",
    "lib/services/user-service.ts"
  ]
}
