{
  "root": true,
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "env": {
    "node": true,
    "browser": true,
    "es2022": true
  },
  "ignorePatterns": [
    "node_modules",
    ".next",
    ".turbo",
    "dist",
    "build",
    "*.config.js",
    "*.config.ts"
  ],
  "rules": {
    "no-unused-vars": "off",
    "no-undef": "off"
  }
}
